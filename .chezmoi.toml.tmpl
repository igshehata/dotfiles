{{- $git_name := promptStringOnce . "git_name" "Your full name" -}}
{{- $git_work_email := promptStringOnce . "git_work_email" "Work email (current employer)" -}}
{{- $git_personal_email := promptStringOnce . "git_personal_email" "Personal email" -}}

[data]
    git_name = {{ $git_name | quote }}
    git_work_email = {{ $git_work_email | quote }}
    git_personal_email = {{ $git_personal_email | quote }}
